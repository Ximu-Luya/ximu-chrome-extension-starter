{
  "name": "ximu-chrome-extension-starter",
  "version": "0.0.1",
  "private": true,
  "displayName": "ximu-chrome-extension-starter",
  "description": "This is a chrome extension starter based on chrome-ext-mv3-starter",
  "scripts": {
    "dev": "rimraf extension/dev && run-p dev:*",
    "dev:prepare": "esno scripts/prepare-dev.ts dev",
    "dev:web": "vite",
    "dev:js": "npm run build:dev -- --watch src",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:prod",
    "build:prepare": "esno scripts/prepare-prod.ts build",
    "build:web": "vite build",
    "build:dev": "tsup src/background src/content --format iife --out-dir extension/dev/dist --no-splitting --onSuccess 'esno scripts/mvsw-dev.ts'",
    "build:prod": "tsup src/background src/content --minify --format iife --out-dir extension/prod/dist --no-splitting --onSuccess 'esno scripts/mvsw-prod.ts'",
    "clear": "rimraf extension/prod",
    "p:ish": "pnpm install --shamefully-hoist",
    "p:up": "pnpm up"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.7.0",
    "@iconify/tailwind": "^1.2.0",
    "@iconify-json/icon-park-outline": "^1.2.2",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/chrome": "^0.0.225",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.4.1",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vueuse/core": "^9.13.0",
    "autoprefixer": "^10.4.20",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "kolorist": "^1.7.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "rimraf": "^4.4.1",
    "tailwindcss": "^3.4.17",
    "tsup": "^6.7.0",
    "typescript": "^4.3.5",
    "vite": "^4.2.1",
    "vue": "^3.2.47",
    "vue-demi": "^0.13.11",
    "vue-global-api": "^0.4.1",
    "webext-bridge": "^5.0.5"
  }
}
